# OAT DB Configuration
# Copy this file to .env and adjust the values for your environment

# Database Configuration
# Options: memory, postgres
OAT_DATABASE_TYPE=postgres

# PostgreSQL connection string (when using postgres)
DATABASE_URL=postgres://postgres:password@localhost:5432/oatdb

# Alternative: You can set individual connection parameters
# OAT_DATABASE_CONNECTION_STRING=postgres://username:password@host:port/database

# Server Configuration
OAT_SERVER_HOST=127.0.0.1
OAT_SERVER_PORT=7061

# Database Connection Pool
OAT_DATABASE_MAX_CONNECTIONS=20

# Logging
RUST_LOG=info

# Development vs Production
RUST_ENV=development